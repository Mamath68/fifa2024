{% extends 'base.html.twig' %}

		{% block title %}
			Les Clubs
		{% endblock %}

		{% block body %}
			<h1 class="text-gray-800 mb-4">
				Les Clubs
			</h1>

			<div class="overflow-x-auto">
				<table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
					<thead class="bg-gray-800 text-white">
						<tr>
							<th class="w-1/3 px-4 py-2 text-left">
								Name
							</th>
							<th class="w-1/3 px-4 py-2 text-left">
								Created at
							</th>
							<th class="w-1/3 px-4 py-2 text-left">
								Actions
							</th>
						</tr>
					</thead>
					<tbody>
						{% for club in clubs %}
							<tr class="border-b border-gray-200 hover:bg-gray-100">
								<td class="px-4 py-2">
									{{ club.name }}
								</td>
								<td class="px-4 py-2">
									{{ club.createdAt ? club.createdAt|date('Y') : '' }}
								</td>
								<td class="px-4 py-2">
									<a href="{{ path('app_club_show', {'id': club.id}) }}" class="text-blue-600 hover:underline">
										show
									</a>
									<a href="{{ path('app_club_edit', {'id': club.id}) }}" class="text-yellow-600 hover:underline ml-4">
										edit
									</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="3" class="px-4 py-2 text-center">
									No records found
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>

			<a href="{{ path('app_club_new') }}" class="mt-4 inline-block bg-blue-600 text-white px-4 py-2 rounded shadow hover:bg-blue-700">
				Create new
			</a>


		{% endblock %}
