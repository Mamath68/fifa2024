{% extends 'base.html.twig' %}

{% block title %}Player{% endblock %}

{% block body %}
    <h1>Player</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ player.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ player.name }}</td>
            </tr>
            <tr>
                <th>Poste</th>
                <td>{{ player.poste }}</td>
            </tr>
            <tr>
                <th>Biographie</th>
                <td>{{ player.biographie }}</td>
            </tr>
            <tr>
                <th>Pied</th>
                <td>{{ player.pied }}</td>
            </tr>
            <tr>
                <th>Born_at</th>
                <td>{{ player.bornAt ? player.bornAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Lieu_de_naissance</th>
                <td>{{ player.lieuDeNaissance }}</td>
            </tr>
            <tr>
                <th>Pays_de_naissance</th>
                <td>{{ player.paysDeNaissance }}</td>
            </tr>
            <tr>
                <th>Taille</th>
                <td>{{ player.taille }}</td>
            </tr>
            <tr>
                <th></th>
                <td><img src="{{ player.image }}" alt="{{ player.name }}"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_player_index') }}">back to list</a>

    <a href="{{ path('app_player_edit', {'id': player.id}) }}">edit</a>

    {{ include('player/_delete_form.html.twig') }}
{% endblock %}
